<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:text="@string/button1"
        android:background="@color/red700"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="@string/button2"
        android:background="@color/orange700" />

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:text="@string/button3"
        android:background="@color/yellow500" />

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:text="@string/button4"
        android:background="@color/green700"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/button5"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/button5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/blue600"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="@color/indigo700"
        android:text="@string/button6"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/button5"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/purple300"
        android:text="@string/button7"
        android:layout_alignParentBottom="true" />
</RelativeLayout>